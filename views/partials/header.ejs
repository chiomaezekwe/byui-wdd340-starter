  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>

  <div id="tools">
    <ul>
      <% if (loggedIn) { %>
        <li>
          <a href="/account" title="Go to account management">Welcome, <%= clientName %></a>
        </li>
        <li>
          <a href="/account/logout" title="Log out of your account">Logout</a>
        </li>
      <% } else { %>
        <li>
          <a href="/account/login" title="Click to log in">My Account</a>
        </li>
      <% } %>
    </ul>
  </div>
</header>


