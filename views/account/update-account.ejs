<% /* Profile Update Forms */ %>

<h1><%= title %></h1>

<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="error-box">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<% if (account) { %>
  <!-- Account Info Update Form -->
  <h2>Update Account Info</h2>
  <form action="/account/update" method="post">
    <input type="hidden" name="account_id" value="<%= account.account_id %>">

    <label for="account_firstname">First Name:</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= typeof account.account_firstname !== 'undefined' ? account.account_firstname : '' %>"
    >

    <label for="account_lastname">Last Name:</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= typeof account.account_lastname !== 'undefined' ? account.account_lastname : '' %>"
    >

    <label for="account_email">Email:</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= typeof account.account_email !== 'undefined' ? account.account_email : '' %>"
    >

    <button type="submit">Update Info</button>
  </form>

  <hr>

  <!-- Change Password Form -->
  <h2>Change Password</h2>
  <p>Password must be at least 12 characters and contain 1 capital letter, 1 number, and 1 special character.</p>

  <form action="/account/update-password" method="post">
    <input type="hidden" name="account_id" value="<%= account.account_id %>">

    <label for="account_password">New Password:</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
      pattern="^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$"
      title="Must be at least 12 characters and contain 1 capital letter, 1 number, and 1 special character."
    >

    <button type="submit">Change Password</button>
  </form>
<% } else { %>
  <p style="color: #990000;">Error: Account details could not be loaded.</p>
<% } %>
